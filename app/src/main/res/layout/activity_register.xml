<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.espritmobile.lostandfounduniversity.RegisterActivity"
    android:background="@drawable/bg">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:id="@+id/linearLayout">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ib_register_userpic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/pro"
            android:layout_gravity="center_horizontal"/>
        <EditText
            android:id="@+id/et_register_username"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="Roboto"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/iconuser"
            android:layout_marginTop="20dp"
            android:hint="Username"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_register_email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="Roboto"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/email"
            android:layout_marginTop="5dp"
            android:hint="Email"
            android:textSize="16sp"
            android:inputType="textEmailAddress"/>
        <EditText
            android:id="@+id/et_register_Password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="Roboto"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/locker"
            android:layout_marginTop="5dp"
            android:hint="Password"
            android:textSize="16sp"
            android:inputType="textPassword"/>
        <EditText
            android:id="@+id/et_register_telephone"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="Roboto"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/smartphone"
            android:layout_marginTop="5dp"
            android:hint="Telephone"
            android:textSize="16sp"
            android:inputType="phone"/>
        <Spinner
            android:id="@+id/sp_register_university"
            android:spinnerMode="dropdown"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_spinner_background"/>
        <Button
            android:id="@+id/btn_register_signup"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:text="SIGN UP"
            android:textColor="@color/colorEsprit"
            android:background="@drawable/roundbutton"
            android:layout_marginTop="15dp"/>


    </LinearLayout>
</RelativeLayout>
