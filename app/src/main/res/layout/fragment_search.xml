<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.espritmobile.lostandfounduniversity.Fragments.SearchFragment">
    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Spinner
                android:layout_marginTop="30dp"
                android:id="@+id/sp_search_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                android:layout_marginTop="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/colorBlack"
                        android:text="Object"/>
                    <CheckBox
                        android:id="@+id/sw_search_object"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </LinearLayout>
            <Spinner
                android:layout_marginTop="30dp"
                android:id="@+id/sp_search_post_object"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"/>
                <com.github.florent37.materialtextfield.MaterialTextField
                    android:id="@+id/mt_search_object"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mtf_image="@drawable/other"
                    android:layout_gravity="center_horizontal"
                    app:mtf_labelColor="@color/colorLightGray">

                    <EditText
                        android:id="@+id/et_search_object"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Object"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="15sp" />

                </com.github.florent37.materialtextfield.MaterialTextField>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:text="Date"/>
                <CheckBox
                    android:id="@+id/cb_search_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Spinner
                android:layout_marginTop="30dp"
                android:id="@+id/sp_search_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/tv_search_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Pick date"
                android:gravity="center"
                android:background="@drawable/round_button_gray"
                android:layout_marginRight="5dp"
                android:drawableLeft="@mipmap/calendar"
                android:paddingLeft="5dp"
                tools:paddingTop="5dp"
                tools:paddingBottom="5dp"
                android:textColor="@color/colorEsprit"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/tv_search_date_1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="First date"
                    android:gravity="center"
                    android:background="@drawable/round_button_gray"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@mipmap/calendar"
                    android:paddingLeft="5dp"
                    tools:paddingTop="5dp"
                    tools:paddingBottom="5dp"
                    android:textColor="@color/colorEsprit"/>
                <TextView
                    android:id="@+id/tv_search_date_2"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="Second date"
                    android:gravity="center"
                    android:background="@drawable/round_button_gray"
                    android:drawableLeft="@mipmap/calendar"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5dp"
                    tools:paddingTop="5dp"
                    tools:paddingBottom="5dp"
                    android:textColor="@color/colorEsprit"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                android:layout_marginTop="20dp"/>
            <Button
                android:id="@+id/btn_search"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:background="@drawable/roundbutton"
                android:text="Search for similair"
                android:textColor="@color/colorEsprit"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
